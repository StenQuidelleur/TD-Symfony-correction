{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">{{ article.title }}</h5>
            <h6 class="card-subtitle mb-2 text-muted">{{ article.user.firstname }} {{ article.user.lastname }} - {{ article.createdAt ? article.createdAt|date('d/m/Y') : '' }}</h6>
            <p class="card-text">{{ article.Content }}</p>
        </div>
    </div>
    {% if is_granted('ROLE_USER') %}
        <div class="d-flex">
            <a class="btn btn-warning me-2" href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>
            {{ include('article/_delete_form.html.twig') }}
        </div>
    {% endif %}
{% endblock %}
