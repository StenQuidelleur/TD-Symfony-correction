{% extends 'base.html.twig' %}

{% block title %}Articles - {{ user.firstname }} {{ user.lastname }}{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center mb-5">Articles - {{ user.firstname }} {{ user.lastname }}</h1>
    {% for article in articles %}
        {% include 'article/_card.html.twig' with  {'article': article } %}
    {% else %}
        <p colspan="6">no records found</p>
    {% endfor %}
</div>
{% endblock %}
