{% trans_default_domain 'td-symfony' %}

<nav class="navbar navbar-expand-lg navbar-light bg-light px-5">
    <a class="navbar-brand" href="{{ path('home') }}">{{ 'navbar.homepage'|trans }}</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="{{ path('app_user_index') }}">{{ 'navbar.user'|trans }}</a>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                {{ 'navbar.category'|trans }}
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    {% for category in categories %}
                        <a class="dropdown-item" href="{{ path('show_articles_by_category', {'id': category.id}) }}">{{ category.name }}</a>
                    {% endfor %}
                </div>
            </li>
            {% if is_granted('ROLE_USER') %}
                <li class="nav-item active">
                    <a class="nav-link btn btn-outline-info" href="{{ path('app_article_new') }}">{{ 'navbar.article'|trans }} +</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link btn btn-outline-info" href="{{ path('app_logout') }}">{{ 'navbar.logout'|trans }}</a>
                </li>
            {% else %}
                <li class="nav-item active">
                    <a class="nav-link btn btn-outline-info" href="{{ path('app_login') }}">{{ 'navbar.login'|trans }}</a>
                </li>
            {% endif %}
            <li class="nav-item active">
                <a class="nav-link btn btn-outline-info" href="{{ path('home_fr') }}">FR</a>
            </li>
            <li class="nav-item active">
                <a class="nav-link btn btn-outline-info" href="{{ path('home_en') }}">EN</a>
            </li>
        </ul>
    </div>
</nav>
    